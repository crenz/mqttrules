{
  "config": {
    "broker": "tcp://localhost:1883",
    "username": "",
    "password": "",
    "allowRulesUpdate": true
  },
  "parameters": {
    "lights_kitchen_state": {
      "value": "",
      "topic": "hue/status/lights/Kitchen light",
      "JSONPath": "$.on"
    }
  },
  "rules": {
    "general": {
      "alive": {
        "schedule": "@every 1s"
        "actions": [
          {
            "topic": "home/rules_alive"
            "payload": ""
            "qos": 1
            "retain": false
          }
        ]
      }
    },
    "lights": {
      "kitchen-switch": {
        "trigger": "home/dash/status/On2",
        "condition": "payload() > 0",
        "actions": [
          {
            "topic": "hue/set/lights/Kitchen light",
            "payload": "{ \"on\" : ${!lights_kitchen_state}}",
            "qos": 2,
            "retain": false
          }
        ]
      }
    }
  }
}